    <record model="ir.ui.view" id="view_for_pis_registro_inicial_form">
        <field name="name">for.pis.registro_inicial.form</field>
        <field name="model">for.pis.registro_inicial</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
			<form string="for.registro_inicial">
                
                <!--separator string="Ubicación Administrativa de la Formación" colspan="4"/>
                    <field name="estado_id" select="0"/>
                    <field name="municipio_id" select="0" domain="[('estado_id','=',[estado_id])]"/>
                    <field name="parroquia_id" select="0" domain="[('municipio_id','=',[municipio_id])]"/>
                    <field name="cfs_id" select="0" domain="[('estado_id','=',[estado_id])]"/-->
				
                <!--Buscar ubicacion geografica-->
                <separator string="Ubicación Administrativa de la Formación" colspan="4"/>					
                                        
                    <field name="estado_id" on_change="on_change_limpiar_campo('municipio_id','parroquia_id')" select="0" required="1" />
                    <field name="municipio_id" on_change="on_change_limpiar_campo('parroquia_id')" domain="[('estado_id','=',[estado_id])]" select="0" required="1" />
					<field name="parroquia_id" domain="[('municipio_id','=',[municipio_id])]" select="0" required="1" />
					<field name="cfs_id" select="0" domain="[('estado_id','=',[estado_id])]" required="1" />
                    <field name="dependencia_id" select="0" required="True"/>

                
                <separator string="Datos Básicos la Formación" colspan="4"/>
					<field name="nro_preimpreso" select="1" readonly="True"/>
					<field name="accion_especifica" select="0" required="1" />
					<field name="modalidad_id" select="0" />
                    <field name="denominacion_pis_id" select="1" colspan="2" on_change="on_change_modalidad_id(denominacion_pis_id)" required="0" />
                    <field name="identificador_id" select="0"/>
					<field name="cantidad_sujetos_programados" select="0" required="1" attrs="{'readonly':[('cantidad_sujetos_enproceso','>',0),('cantidad_sujetos_programados','>',0)]}"/>
                    
                    
					<!--field name="cantidad_maestros" select="0"/-->
					<!--field name="fecha_inicio" select="0"/>
					<field name="fecha_cierre" select="0"/-->
					<field name="lapso_ejecucion" string="Duración" select="0" required="0" />
                    <field name="cantidad_sujetos_enproceso" select="0" required="0" />


				<notebook colspan="4">
				<page string="Contexto Económico">
					<!--Limpiar campo relacionados-->
                    <field name="motores_economicos_id" on_change="on_change_limpiar_campo('cadenas_formativas_id')" select="0" />
					<!--field name="sector_id" on_change="on_change_limpiar_campo('area_id','subarea_id')" select="0"/>
					<field name="area_id" on_change="on_change_limpiar_campo('subarea_id')" select="0" domain="[('sector_id','=',[sector_id])]"/>
					<field name="subarea_id" select="0" domain="[('area_id','=',[area_id])]"/-->
					<field name="tipo_procedencia_id" select="0" required="1" />
                    <field name="areas_priorizadas_id" select="0" domain="[('motores_economicos_id','=',[motores_economicos_id])]" required="1" />
                </page>
                <page string="Calendario">
                        <!--field name="secuencia" select="0"/-->
                        <!--campo creado por herencia en indagacion_espacios
                        <field name="turno_id" on_change="on_change_turno(turno)" select="0" required="True"/>                                             
                        <separator string="Horario" colspan="4"/-->
                        <group string="Información de Fechas de la Formación" col="6" colspan="4">
                        <field name="fecha_inicio" select="0" on_change="on_change_validar_fecha(fecha_inicio,'fecha_inicio', fecha_inicio)" required="True"/>
                        <field name="fecha_cierre" select="0" on_change="on_change_validar_fecha(fecha_cierre, 'fecha_cierre', fecha_inicio)" required="True"/>
                        </group>
                        
                        <group string="Información del Horario de la Formación" col="6" colspan="3">
                            <field name="horas_dia" on_change="on_change_hor_inicio(horas_dia, hor_inicio)" required="1" colspan="3"/>
                            <separator string="Horario" colspan="6"/>
                            <field name="hor_inicio" widget="float_time" select="0" on_change="on_change_hor_inicio(horas_dia, hor_inicio)" required="1" colspan="3"/>
                            <field name="hor_fin" widget="float_time" select="0" on_change="on_change_hor_inicio(horas_dia, hor_inicio)" required="1" colspan="3"/>
                            
                            <separator string="Dias de Formación" colspan="6"/>
                            <!--field name="for_dom" select="0"/-->
                            <field name="for_lun" select="0"/>
                            <field name="for_mar" select="0"/>
                            <field name="for_mie" select="0"/>
                            <field name="for_jue" select="0"/>
                            <field name="for_vie" select="0"/>
                            <field name="for_sab" select="0"/>
                        </group>
                    </page>
                    <page string="Matriz Curricular">
                        <field name="matriz_curricular_ids" select="0" nolabel="1">
							<form string="Estructura Curricular">				              
				                <!--field name="opcion_formativa_id" select="1"/-->
				                <field name="ec_tema" select="2" readonly="True"/>
				                <field name="ec_horas" select="0" readonly="True"/>
				                <!-- separator string="'Observaciones'" colspan="4" readonly="True"/ -->
				                <field name="ec_observaciones" colspan="2" nolabel="0" select="0" readonly="True"/>
				                <!-- separator string="'Problema que resuelve'" colspan="4"/ -->
				                <field name="ec_problema_resuelve" colspan="2" nolabel="0" select="0" readonly="True"/>
				                <field name="categoria_id" select="0" readonly="True"/>				                
				            </form>				
				            <tree string="Estructura Curricular">				               
				                <field name="ec_tema"/>
				                <field name="ec_horas"/>
				                <!--field name="opcion_formativa_id"/-->
				                <!-- field name="ec_observaciones"/ -->
				                <!-- field name="ec_problema_resuelve"/ -->
				                <!-- field name="categoria_id"/ -->
				            </tree>
                        </field>                                           
                    </page>
                </notebook>
            </form>
        </field>
    </record>
    
